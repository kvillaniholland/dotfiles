#!/bin/bash

# Install Homebrew if it doesn't exist
if ! [ -x "$(command -v brew)" ]; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew cleanup
brew update
brew upgrade

{{ range .taps -}}
brew tap {{ . | quote }}
{{ end -}}

{{ range .brews -}}
brew install {{ . | quote }}
{{ end -}}
