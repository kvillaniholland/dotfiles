{
    "title": "Caps -> Hyper + Esc",
    "rules": [
        {
            "description": "Caps -> Hyper",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": ["left_command", "left_control", "left_option"]
                        }
                    ],
                    "to_if_alone": [{ "key_code": "escape" }],
                    "type": "basic"
                }
            ]
        }
    ]
}
