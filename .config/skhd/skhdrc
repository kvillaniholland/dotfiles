# Modes
:: window_move @ : $HOME/.config/skhd/mode_helper.sh -m
:: default : $HOME/.config/skhd/mode_helper.sh -n

# Mode Switching
default < shift - escape ; window_move
window_move < escape ; default

####### Normal Mode ###########################################
cmd + ctrl + alt - w : m wallpaper ~/dotfiles/current.jpg
ctrl + alt - d : node ~/.config/skhd/toggle_layout.js

# Normal mode window navigation for convenience
ctrl - m : yabai -m window --focus # Sometimes we end up without a focused window, this will fix that.
# ctrl - h : yabai -m window --focus west
# ctrl - j : yabai -m window --focus south
# ctrl - k : yabai -m window --focus north
# ctrl - l : yabai -m window --focus east

# Window Stack Controls
ctrl + alt - h : yabai -m window --stack west
ctrl + alt - j : yabai -m window --stack south
ctrl + alt - k : yabai -m window --stack north
ctrl + alt - l : yabai -m window --stack east

# Stack Nav
ctrl + shift - j : yabai -m window --focus stack.next
ctrl + shift - k : yabai -m window --focus stack.prev

## Space nav is handled by OS level shortcuts because I don't have the scripting addition installed
# ctrl + cmd + [1/2/3/4] : switch to space 1/2/3/4

####### Modification Mode ###########################################
window_move < q : yabai -m space --layout stack;  node ~/.config/yabai/hammerspoon_bsp_helper.js
window_move < w : yabai -m space --layout bsp;  node ~/.config/yabai/hammerspoon_bsp_helper.js
window_move < e : yabai -m space --layout float; node ~/.config/yabai/hammerspoon_bsp_helper.js
window_move < 1 : yabai -m window --grid 1:2:0:0:1:2
window_move < 2 : yabai -m window --grid 1:2:1:0:1:2
window_move < 3 : yabai -m window --grid 1:3:0:0:1:2
window_move < 4 : yabai -m window --grid 1:3:1:0:1:2
window_move < 5 : yabai -m window --grid 1:3:2:0:1:2
window_move < right : yabai -m window --resize right:40:0
window_move < left : yabai -m window --resize right:-40:0
window_move < alt - right : yabai -m window --resize left:40:0
window_move < alt - left : yabai -m window --resize left:-40:0
window_move < space : yabai -m window --grid 1:1:1:1:1:1

### BSP Stuff
window_move < a : yabai -m window --ratio rel:-0.15
window_move < d : yabai -m window --toggle split
window_move < f : yabai -m window --ratio rel:+0.15

window_move < h : yabai -m window --focus west
window_move < j : yabai -m window --focus south
window_move < k : yabai -m window --focus north
window_move < l : yabai -m window --focus east

window_move < ctrl - h : yabai -m window --warp west
window_move < ctrl - j : yabai -m window --warp south
window_move < ctrl - k : yabai -m window --warp north
window_move < ctrl - l : yabai -m window --warp east

window_move < alt - h : yabai -m window --stack west
window_move < alt - j : yabai -m window --stack south
window_move < alt - k : yabai -m window --stack north
window_move < alt - l : yabai -m window --stack east

 window_move < cmd - 1 : yabai -m window --space 1
 window_move < cmd - 2 : yabai -m window --space 2
 window_move < cmd - 3 : yabai -m window --space 3
 window_move < cmd - 4 : yabai -m window --space 4
