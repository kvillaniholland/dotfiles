# Modes
:: window_navigation @ : $HOME/.config/skhd/mode_helper.sh -w
:: window_move @ : $HOME/.config/skhd/mode_helper.sh -m
:: default : $HOME/.config/skhd/mode_helper.sh -n

# Mode Switching
window_navigation, default < ctrl - j ; window_move
window_move, default < ctrl - k ; window_navigation
window_move < ctrl - j ; default
window_navigation, window_move < escape ; default

####### Normal Mode ###########################################
# Normal mode window navigation for convenience
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

ctrl + alt - h : yabai -m window --stack west
ctrl + alt - j : yabai -m window --stack south
ctrl + alt - k : yabai -m window --stack north
ctrl + alt - l : yabai -m window --stack east

####### Navigation Mode ###########################################
window_navigation < h : yabai -m window --focus west
window_navigation < j : yabai -m window --focus south
window_navigation < k : yabai -m window --focus north
window_navigation < l : yabai -m window --focus east

####### Modification Mode ###########################################
# Moving / Controlling windows
window_move < h : yabai -m window --warp west
window_move < j : yabai -m window --warp south
window_move < k : yabai -m window --warp north
window_move < l : yabai -m window --warp east

window_move < alt - h : yabai -m window --stack west
window_move < alt - j : yabai -m window --stack south
window_move < alt - k : yabai -m window --stack north
window_move < alt - l : yabai -m window --stack east

window_move < a : yabai -m window --ratio rel:-0.15
window_move < f : yabai -m window --ratio rel:+0.15
window_move < space : yabai -m window --toggle zoom-fullscreen
window_move < d : yabai -m window --toggle split
window_move < q : yabai -m window --toggle float && yabai -m window --toggle float

# Drop down to window focusing in move mode for convenience
# window_move < alt - h : yabai -m window --focus west
# window_move < alt - j : yabai -m window --focus south
# window_move < alt - k : yabai -m window --focus north
# window_move < alt - l : yabai -m window --focus east

# Move focus container to workspace
# shift + alt - m : yabai -m window --space last
# shift + alt - p : yabai -m window --space prev
# shift + alt - n : yabai -m window --space next
# shift + alt - 1 : yabai -m window --space 1
# shift + alt - 2 : yabai -m window --space 2
# shift + alt - 3 : yabai -m window --space 3
# shift + alt - 4 : yabai -m window --space 4
# shift + alt - 5 : yabai -m window --space 5
# shift + alt - 6 : yabai -m window --space 6

shift + alt - i : yabai -m space --layout float
shift + alt - u : yabai -m space --layout bsp

cmd + ctrl + alt - w : m wallpaper ~/dotfiles/current.jpg
